<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="exchange_settings" model='exchange.config.settings'/>

    <record id="view_exchange_configuration" model="ir.ui.view">
        <field name="name">exchange.configuration</field>
        <field name="model">exchange.config.settings</field>
        <field name="arch" type="xml">
            <form string="Configure Exchange" version="7.0" create="false" class="oe_form_configuration">
                <separator string="Exchange"/>
                 <group name="init_grp">
                    <label for="id" string="Exchange Name"/>
                    <div name="names">
                        <div>
                            <field name="name"/><newline/>
                            <field name="res_company_id" class="oe_inline"/>
                            <label for="res_company_id"/>
                            <newline/><br/>
                            <field name="exch_code" class="oe_inline"/>
                            <label for="exch_code"/>
                        </div>
                    </div>
                </group> <!--
                <group name="account_grp">
                    <label for="id" string="Accounts"/>
                    <div name="accounts">
                        <div>
                            <field name="account_ids"/>
                        </div>
                    </div>
                </group>
                 -->
                <group name="exchange_grp">
                    <label for="id" string="Exchange Settings"/>
                    <div name="ex-setting">
                        <div>
                            <field name="display_balance" class="oe_inline"/>
                            <label for="display_balance"/>
                        </div>
                        <div>
                            <field name="ref_currency_id" class="oe_inline"/>
                            <label for="ref_currency_id"/>
                        </div>
                        <div>
                            <field name="journal_id" class="oe_inline"/>
                            <label for="journal_id"/>
                        </div>
                        <div>
                            <field name="use_account_numbers" class="oe_inline"/>
                            <label for="use_account_numbers"/>
                        </div>
                        <div>
                            <field name="email_sysadmin" class="oe_inline"/>
                            <label for="email_sysadmin"/>
                        </div>
                    </div>
                </group>
            </form>
        </field>
    </record>

